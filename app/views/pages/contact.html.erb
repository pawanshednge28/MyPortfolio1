<div class="container my-5">
  <h1 class="text-center">Contact Me</h1>

  <div class="row justify-content-center mt-4">
    <div class="col-md-6">
      <%= form_with url: contact_path, method: :post, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :name, "Your Name", class: "form-label" %>
          <%= f.text_field :name, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :email, "Your Email", class: "form-label" %>
          <%= f.email_field :email, class: "form-control", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :message, "Your Message", class: "form-label" %>
          <%= f.text_area :message, class: "form-control", rows: 5, required: true %>
        </div>

        <div class="text-center">
          <%= f.submit "Send Message", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
